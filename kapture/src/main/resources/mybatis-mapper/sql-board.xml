<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.kapture.board.mapper.BoardMapper">
	<select id="selectBoardList" parameterType="hashmap" resultType="com.example.kapture.board.model.Board">
		SELECT *
		FROM BOARD
	</select>
	
	<insert id="insertBoard" parameterType="hashmap">
		INSERT INTO BOARD(BOARDNO, TITLE, CONTENTS, USERID, CNT, CDATETIME, UDATETIME)
		VALUES(BOARD_SEQ.NEXTVAL, #{title}, #{contents}, 'user04', 0, SYSDATE, SYSDATE)
	</insert>
	
	<select id="selectBoard" parameterType="hashmap" resultType="com.example.kapture.board.model.Board">
		SELECT *
		FROM BOARD
		WHERE BOARDNO = #{boardNo}
	</select>
	
	<update id="updateBoard" parameterType="hashmap">
		UPDATE BOARD
		SET TITLE = #{title}, CONTENTS = #{contents}
		WHERE BOARDNO = #{boardNo}	
	</update>
	
	
	
</mapper>




